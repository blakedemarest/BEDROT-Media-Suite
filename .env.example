# Bedrot Productions Media Tool Suite - Environment Configuration
# Copy this file to .env and customize paths for your environment

# ===============================
# PROJECT ROOT CONFIGURATION
# ===============================
# Base directory for the entire project (defaults to script directory)
# SLIDESHOW_PROJECT_ROOT=/path/to/bedrot_media_suite

# ===============================
# DIRECTORY STRUCTURE
# ===============================
# Configuration files directory
SLIDESHOW_CONFIG_DIR=config

# Source code directory
SLIDESHOW_SRC_DIR=src

# Tools directory
SLIDESHOW_TOOLS_DIR=tools

# Temporary files directory
SLIDESHOW_TEMP_DIR=temp

# Documentation directory
SLIDESHOW_DOCS_DIR=docs

# ===============================
# APPLICATION SCRIPTS
# ===============================
# Media download application
SLIDESHOW_MEDIA_DOWNLOAD_SCRIPT=src/media_download_app.py

# Snippet remixer application
SLIDESHOW_SNIPPET_REMIXER_SCRIPT=src/snippet_remixer.py

# Lyric video uploader application
SLIDESHOW_LYRIC_VIDEO_SCRIPT=src/lyric_video_uploader_modular.py

# Random slideshow generator
SLIDESHOW_RANDOM_SLIDESHOW_SCRIPT=src/random_slideshow/main.py

# Reel tracker application
SLIDESHOW_REEL_TRACKER_SCRIPT=src/reel_tracker_modular.py

# Slideshow editor tool
SLIDESHOW_EDITOR_SCRIPT=tools/slideshow_editor.py

# MV Maker application
SLIDESHOW_MV_MAKER_SCRIPT=src/mv_maker/main_app.py

# ===============================
# CONFIGURATION FILES
# ===============================
# Media downloader settings
SLIDESHOW_MEDIA_DOWNLOAD_CONFIG=yt_downloader_gui_settings.json

# Snippet remixer settings
SLIDESHOW_SNIPPET_REMIXER_CONFIG=video_remixer_settings.json

# Lyric video uploader settings
SLIDESHOW_LYRIC_VIDEO_CONFIG=lyric_video_config.json

# Random slideshow settings
SLIDESHOW_RANDOM_SLIDESHOW_CONFIG=combined_random_config.json

# Reel tracker settings
SLIDESHOW_REEL_TRACKER_CONFIG=reel_tracker_config.json

# Slideshow editor settings
SLIDESHOW_EDITOR_CONFIG=config.json

# MV Maker settings
SLIDESHOW_MV_MAKER_CONFIG=mv_maker_config.json

# ===============================
# DEFAULT OUTPUT DIRECTORIES
# ===============================
# Default downloads directory
SLIDESHOW_DEFAULT_DOWNLOADS_DIR=~/Videos/Downloads

# Default slideshows output directory
SLIDESHOW_DEFAULT_OUTPUT_DIR=~/Videos/RandomSlideshows

# Default exports directory
SLIDESHOW_DEFAULT_EXPORTS_DIR=~/Videos/Exports

# Default lyric video project workspace
SLIDESHOW_LYRIC_VIDEO_PROJECT_ROOT=~/Videos/LyricVideoProjects

# ===============================
# EXTERNAL TOOLS
# ===============================
# FFmpeg executable path (leave empty to use PATH)
# SLIDESHOW_FFMPEG_PATH=/usr/local/bin/ffmpeg

# FFprobe executable path (leave empty to use PATH)
# SLIDESHOW_FFPROBE_PATH=/usr/local/bin/ffprobe

# yt-dlp executable path (leave empty to use PATH)
# SLIDESHOW_YTDLP_PATH=/usr/local/bin/yt-dlp

# ===============================
# PROCESSING SETTINGS
# ===============================
# Maximum number of concurrent processes
SLIDESHOW_MAX_PROCESSES=4

# Default video processing quality
SLIDESHOW_DEFAULT_QUALITY=720p

# Default aspect ratio
SLIDESHOW_DEFAULT_ASPECT_RATIO=16:9

# ===============================
# LOGGING CONFIGURATION
# ===============================
# Log file directory
SLIDESHOW_LOG_DIR=logs

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
SLIDESHOW_LOG_LEVEL=INFO

# Maximum log file size in MB
SLIDESHOW_MAX_LOG_SIZE=10

# Number of log files to keep
SLIDESHOW_LOG_BACKUP_COUNT=5

# ===============================
# API KEYS
# ===============================
# ElevenLabs API key for video caption transcription
# Get your key from https://elevenlabs.io
# ELEVENLABS_API_KEY=your_api_key_here

# ===============================
# SECURITY SETTINGS
# ===============================
# Enable path validation (recommended: true)
SLIDESHOW_ENABLE_PATH_VALIDATION=true

# Restrict file operations to project directory
SLIDESHOW_RESTRICT_TO_PROJECT=true

# Enable file extension validation
SLIDESHOW_ENABLE_EXTENSION_VALIDATION=true
